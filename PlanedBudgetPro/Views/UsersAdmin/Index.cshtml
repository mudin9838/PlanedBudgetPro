@model IEnumerable<IdentitySample.Models.ApplicationUser>

@{ ViewBag.Title = "Index"; }


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    @Html.ActionLink("አዲስ", "Create")
</button>
@*<p class="btn btn-success">
        @Html.ActionLink("አዲስ", "Create")
    </p>*@
<div class="card-body">
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                @*Add a table header for the Address info:*@
                @*<th>
                        @Html.DisplayNameFor(model => model.DisplayAddress)
                    </th>*@
                <th>

                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <!--<td>-->
                    @*Add table data for the Address info:*@
                    @*@Html.DisplayFor(modelItem => item.DisplayAddress)*@

                    <td>
                        @Html.ActionLink("አርም", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("ዝርዝር", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("ሰርዝ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>

@section scripts{

    <script src="~/js/datatable.js"></script>
}
