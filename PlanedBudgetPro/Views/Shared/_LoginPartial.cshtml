@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
@Html.AntiForgeryToken()

                    <ul class="nav navbar-nav navbar-right">
                        @if (User.IsInRole("Admin"))
                        {
    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>}
                        <li>
                            @Html.ActionLink("Welcome,   " + " " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                     @*   <li class="fas fa-sign-out-alt"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
                  @* <--redirecting user to login page--> *@
                        <li class="fas fa-sign-out-alt"><a href="~/Account/Login">Log off</a></li>
                    </ul> }
                                }
                                else
                                {
                    <ul class="nav navbar-nav navbar-right">

                        @*@if (Request.IsAuthenticated == true)*@

                        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>


                        <li class="fas fa-sign-in-alt">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>}

