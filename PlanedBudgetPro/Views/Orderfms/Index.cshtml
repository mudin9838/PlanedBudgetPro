        ///////////////////////////////
        $("#addToList").click(function (e) {
            e.preventDefault();
            editMode = false;

            if ($.trim($("#RevenueCategoryId").val()) == "" ||
                $.trim($("#ChartOfAccountId").val()) == "" ||
                $.trim($("#amountyplan").val()) == "" ||
                $.trim($("#amountyperformance").val()) == "") return;

